<div class="d-flex justify-content-center">
    <div class="card" style="width: 44rem;">
        <div class="card-body">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-md-4">
                    <img src="<%= @pokemon.pokedex.image_url %>" alt="image" width="250">
                    <h3><%= @pokemon.name %></h3>
                    <h5>(<%= @pokemon.pokedex.name %>)</h5>
                    <h5><%= @pokemon.pokedex.type.name %></h5>
                </div>
                <div class="col-md-6">
                    <p>Max HP: <%= @pokemon.max_hp %></p>
                    <p>Current HP: <%= @pokemon.current_hp %></p>
                    <p>Attack: <%= @pokemon.attack %></p>
                    <p>Defense: <%= @pokemon.defense %></p>
                    <p>Speed: <%= @pokemon.speed %></p>
                    <% if (@pokemon.skills.present?) %>
                        <p class="d-flex">
                            <p>Skills:</p>
                            <% @pokemon.skills.each do |skill| %>
                                <li>
                                    <%= skill.name %>
                                </li>
                            <% end %>
                        </p>
                    <% else %>
                        <p>No skills available.</p>
                    <% end %>
                </div>
            </div>
            <%= link_to 'Edit', edit_pokemon_path(@pokemon), class: 'btn btn-success' %>
            <%= link_to 'Delete', pokemon_path(@pokemon), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
    </div>
</div>