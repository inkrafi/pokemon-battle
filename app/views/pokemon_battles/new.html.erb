<form action="<%= pokemon_battles_path %>" accept-charset="UTF-8" method="post" class="text-dark">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="row">
        <!-- Player 1 -->
        <div class="col-6">
            <div class="mb-5">
                <h4 class="mb-3">Player 1</h4>
                <select id="pokemon-select-1" class="form-select" name="pokemon_1[pokemon_player_id]" aria-label="Default select example">
                    <option selected>Choose Pokemon</option>
                    <% @pokemons.each do |pokemon| %>
                        <option value="<%= pokemon.id %>"><%= pokemon.name %></option>
                    <% end %>
                </select>
            </div>
        </div>
        <!-- Player 2 -->
        <div class="col-6">
            <div class="mb-5">
                <h4 class="mb-3">Player 2</h4>
                <select id="pokemon-select-2" class="form-select" name="pokemon_2[pokemon_player_id]" aria-label="Default select example">
                    <option selected>Choose Pokemon</option>
                    <% @pokemons.each do |pokemon| %>
                        <option value="<%= pokemon.id %>"><%= pokemon.name %></option>
                    <% end %>
                </select>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-warning">Start Battle</button>
</form>